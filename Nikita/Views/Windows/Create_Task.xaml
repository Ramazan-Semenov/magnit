            <DatePicker  SelectedDate="{Binding Task_Book.end_date}" Background="White"  Margin="732,72,118,93" />
            <ComboBox IsEditable="True" Text="{Binding Task_Book.status}" Margin="909,32,12,138">
                <TextBlock Background="Red">Высокий</TextBlock>
                <TextBlock Background="Yellow" >Средний</TextBlock>
                <TextBlock Background="Green" >Низкий</TextBlock>

            </ComboBox>
        </Grid>
        <Grid Grid.Row="2">
            <Label Background="#b4bdce" Content="Описание задачи" Margin="0,0,888,249"></Label>
            <TextBox Text="{Binding desctription}"  Margin="8,33,12,63">
            </TextBox>
            <Button Command="{Binding Create}" Content="Создать запрос" Margin="868,232,26,11"></Button>
        </Grid>
